<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme -->
    <style name="Base.Theme.SamadNursingHome" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_teal</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_teal_light</item>
        <item name="colorOnPrimaryContainer">@color/text_primary_light</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/secondary_blue_light</item>
        <item name="colorOnSecondaryContainer">@color/text_primary_light</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorSurfaceVariant">@color/surface_variant_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_teal</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:textColorTertiary">@color/text_tertiary_light</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/medical_red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Outline Colors -->
        <item name="colorOutline">@color/divider_light</item>
        <item name="colorOutlineVariant">@color/glass_border</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.SamadNursingHome.Dark" parent="Base.Theme.SamadNursingHome">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_teal_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/primary_teal_dark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary_blue_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/secondary_blue_dark</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_dark</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorTertiary">@color/text_tertiary_dark</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/medical_red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Outline Colors -->
        <item name="colorOutline">@color/divider_dark</item>
        <item name="colorOutlineVariant">@color/glass_border_dark</item>
    </style>

    <style name="Theme.SamadNursingHome" parent="Base.Theme.SamadNursingHome" />

    <!-- Button Styles -->
    <style name="Widget.SamadNursingHome.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>
    
    <style name="Widget.SamadNursingHome.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.SamadNursingHome.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="strokeColor">?attr/colorOutlineVariant</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Glassmorphism Card Style -->
    <style name="Widget.SamadNursingHome.Card.Glass" parent="Widget.SamadNursingHome.Card">
        <item name="cardBackgroundColor">@color/glass_white</item>
        <item name="cardElevation">12dp</item>
        <item name="strokeColor">@color/glass_border</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Text Input Styles -->
    <style name="Widget.SamadNursingHome.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorOnSurfaceVariant</item>
    </style>
    
    <!-- FAB Style -->
    <style name="Widget.SamadNursingHome.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/emergency_red</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="Widget.SamadNursingHome.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="elevation">8dp</item>
    </style>
</resources>